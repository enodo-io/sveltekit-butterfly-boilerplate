# Butterfly Configuration - Example file
# Copy this file to .env and fill with your actual values
# Or run: npm run setup

# Your website public URL
PUBLIC_BASE_URL=https://demo.enodo.dev

# Butterfly API Configuration
# Find these values at: https://butterfly.enodo.app
# In: Your Property > Administration > Settings
PUBLIC_API_URL=https://42.pubbtf.eno.do
PUBLIC_API_KEY=your-api-key-here

# Media domain
PUBLIC_MEDIA_URL=https://42.staticbtf.eno.do

# Search engine indexing
PUBLIC_INDEXABLE=true

# Static pages (optional)
# Format: {"about":1,"legal":2}
PUBLIC_STATIC_PAGES={"about":1}

# Language & Locale
PUBLIC_LOCALE=en_US
PUBLIC_LANGUAGE=en

# Google Tag Manager
PUBLIC_GTM_ID=GTM-XXXX
